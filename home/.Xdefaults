xterm*reverseVideo: true
xterm*termName: xterm-256color
xterm*scrollBar: false

!rxvt defaults:
URxvt*reverseVideo: true
URxvt*scrollBar: false
URxvt*transparent: true
URxvt*shading: 5

!links:
URxvt*perl-ext-common: default,matcher
URxvt*url-launcher: sensible-browser
URxvt*matcher.button: 1
URxvt*matcher.pattern.1: \\[ch(\\d+)\\]
URxvt*matcher.launcher.1: sensible-browser https://app.clubhouse.io/biosite/story/$1

!Bind C-0, C-+ and C-= to activate medium, big and small font size respectively.
URxvt*keysym.C-0:     command:\033]710;xft:Bitstream Vera Sans Mono:style=Roman:size=9\007
URxvt*keysym.C-minus: command:\033]710;xft:Bitstream Vera Sans Mono:style=Roman:size=7\007
URxvt*keysym.C-equal: command:\033]710;xft:Bitstream Vera Sans Mono:style=Roman:size=12\007

!ctrl+arrows
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

!bell:
URxvt*urgentOnBell: true

!font:
URxvt*letterSpace: -2
URxvt.allow_bold:       true
URxvt.font:             xft:Bitstream Vera Sans Mono:style=Roman:size=9
URxvt.boldFont:         xft:Bitstream Vera Sans Mono:style=Bold:size=9
URxvt*xftAutoHint: true

!colors
URxvt*color0: #000000
URxvt*color1: #CC0000
URxvt*color2: #4E9A06
URxvt*color3: #C4A000
URxvt*color4: #3465A4
URxvt*color5: #75507B
URxvt*color6: #06989A
URxvt*color7: #D3D7CF
URxvt*color8: #555753
URxvt*color9: #EF2929
URxvt*color10: #8AE234
URxvt*color11: #FCE94F
URxvt*color12: #729FCF
URxvt*color13: #AD7FA8
URxvt*color14: #34E2E2
URxvt*color15: #EEEEEC
